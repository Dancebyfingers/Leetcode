 class Solution:
    def isValid(self, s: str) -> bool:
        counter = 0;
        for i in s: 
             if(i == '(' or '['  or '{'):
                counter+=1;
             elif(i == ')' or ']'  or '}'):    
                counter-=1;
        return counter
